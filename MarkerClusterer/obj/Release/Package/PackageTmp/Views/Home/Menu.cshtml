@using MarkerClusterer.Helpers
@model List<MarkerClusterer.Models.Menu>

@{
    ViewBag.Title = "Menu";
}

<h2>Menu</h2>

<div class="row">
    <div class="col-lg-12">
        @(Html.TreeView(Model)
                .EmptyContent("No locations have been defined yet!")
                .Children(m => m.Childrens)
                .HtmlAttributes(new { id = "tree" })
                .ChildrenHtmlAttributes(new { @class = "subItem" })
                .ItemText(m => m.Text)
                .ItemTemplate(
                    @<text>
                        @{ var sel = "";}
                        @if (item.selected)
                        {
                            sel = "btn";
                        }
                        <a class="@sel" href="@Url.Action("Menu","Home",new { id = item.idItem })">@item.Text</a>
                    </text>)
        )
    </div>
</div>