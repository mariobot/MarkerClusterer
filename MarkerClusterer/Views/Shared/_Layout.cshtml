<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Marker Navegation</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
</head>
<body>
    <div class="navbar navbar-fixed-top navbar-default">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Marker Navegation", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li><a href="@Url.Action("Create","Items")">Adicionar Item</a></li>
                    <li><a href="@Url.Action("Index","Items")">Lista de Item</a></li>
                    <li><a href="@Url.Action("GoogleMaps","Home")">Google Maps</a></li>
                </ul>
            </div>
        </div>
    </div>

    
        <div class="container body-content">
            <div class="row">
                <div class="col-lg-3">
                    <br />
                    <br />
                    <br />
                    <br />
                    <div class="list-group">
                        <a href="#" class="list-group-item active">
                            Navegation 1
                        </a>
                        <a href="#" class="list-group-item">
                            Navegation 2
                        </a>
                        <a href="#" class="list-group-item">
                            Navegation 3
                        </a>
                    </div>
                </div>
                <div class="col-lg-9">
                    @RenderBody()
                </div>
            </div>
        </div>
    <hr />
    <footer>
        <center>
            <p>&copy; @DateTime.Now.Year - Developed by Mario Botero - <a href="http://about.me/mariobot" target="_blank">About Mario.</a></p>
        </center>
    </footer>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>