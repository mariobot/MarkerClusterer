@using MarkerClusterer.Helpers
@model List<MarkerClusterer.Models.Item>

@{
    ViewBag.Title = "Menu";
}

<h2>Menu</h2>

<div class="row">
    <div class="col-lg-12">

        @(Html.TreeView(Model)
                .EmptyContent("No locations have been defined yet!")                
                //.Children(m => m. )
                .HtmlAttributes(new { id = "tree" })
                .ChildrenHtmlAttributes(new { @class = "subItem" })
                .ItemText(m => m.Name)
                .ItemTemplate(
                    @<text>
                        <a href="#@item.id">@item.Name</a>
                    </text>)
        )
    </div>
</div>